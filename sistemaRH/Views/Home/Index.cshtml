@{
    ViewData["Title"] = "Home Page";
}


<style>

    body {
        font-family: Roboto, Helvetica, sans-serif;
        background: url(https://cdn.pixabay.com/photo/2015/02/02/11/09/office-620822_960_720.jpg);
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
        margin: auto;
    }

    section {
        padding: 2rem 0;
    }

    img {
        display: block;
        max-width: 100%;
    }

    h2 {
        font-family: Roboto, Helvetica, sans-serif;
        line-height: 1.2;
        font-weight: 700;
    }

    p {
        font-size: 0.875rem;
        line-height: 1.5;
    }

    .corpo {
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 1rem;
        padding-right: 1rem;
    }

    /* SERVIÇOS */

    .servicos-home {
        width: 100%;
        text-align: center;
        background-color: rgba(221, 219, 219, 0.76);
        color: #393939;
        margin: 50px;
        margin-left: 0;
        padding: 10px;
        padding-left: 0;
        border-radius: 15px 50px;
    }

    .servicos-lista {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 2rem;
        text-align: left;
        padding: 1rem 0;
    }

        .servicos-lista li {
            display: grid;
            grid-template-columns: auto minmax(200px, 1fr);
            gap: 1rem;
            align-items: center;
            cursor: pointer;
        }

        .servicos-lista img {
            border-radius: 10%;
            box-shadow: 4px 4px 4px rgba(0, 0, 0, 0.1);
            cursor: pointer;
        }

        .servicos-lista h2 {
            font-size: 1.125rem;
            margin-bottom: 1rem;
            color: #217CFC;
            text-transform: uppercase;
        }

        .servicos-lista p {
            font-size: 1rem;
            line-height: 1;
        }

    html {
        scroll-behavior: smooth;
    }


    .main {
        margin-top: 0;
        width: 100%;
        height: 500px;
        color: white;
        text-align: left;
        display: flex;
        align-items: center;
        font-family: "Segoe UI", Roboto, sans-serif;
    }

        .main h1 {
            font-size: 5.25rem;
            text-transform: uppercase;
        }

        .main h3 {
            font-size: 2.125rem;
            font-style: italic;
        }

</style>

<link href="/css/style.css" rel="stylesheet" />


<main class="main">
    <div>
        <img src="~/lib/novalogo.png">

    </div>
</main>


<section class="servicos-home">
    <div class="corpo">
        <ul class="servicos-lista">
            <li>
                <img src="/lib/registro-online.png" alt="Aluna">
                <div class="box">
                    <link rel="js" href="~/js/registro.js" asp-append-version="true" />
                    <p>Acompanhe seus registros!</p>
                </div>
            </li>
            <li>
                <img src="/lib/entrada (2).png" alt="Aluno">
                <div class="box">
                    <h2>Entrada</h2>
                    <p>Veja sua entrada aqui!</p>
                </div>
            </li>
            <li>
                <img src="/lib/saida-de-emergencia.png" alt="Aluna">
                <div class="box">
                    <h2>Saida</h2>
                    <p>Veja sua saida aqui!</p>
                </div>
            </li>

        </ul>
    </div>
</section>